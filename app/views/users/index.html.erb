<p id="notice"><%= notice %></p>

<h1 class="text-center">Usuarios</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Playlist</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= user.playlists.count%></td>
				<td><%= link_to 'Mostrar', user, class:'btn btn-info' %></td>
				<td><%= link_to 'Editar', edit_user_path(user), class:'btn btn-warning' %></td>
				<td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path, class:'btn btn-primary' %>
