<p id="notice"><%= notice %></p>

<div class="card bg-light large-padding text-center" style="width: 30rem;">
	<p>
		<strong>Name:</strong>
		<%= @playlist.name %>
	</p>
	
	<p>
		<strong>User:</strong>
		<%= @playlist.user.name %>
	</p>
	
	
	<div class="form-group input-group">
		<%= form_with(model:[@playlist, @song]) do |f| %>
		<label class="has-float-label">
			<%= f.text_field :artist, autofocus: true, class:'form-control', placeholder:'Artista'  %>
			<span>Artista</span>
		</label>
		<br>
		<label class="has-float-label">
			<%= f.text_field :name, class:'form-control', placeholder:'nombre'  %>
			<span>Nombre</span>
		</label>
		
		<br>
		<%= f.submit 'Guardar', class:'btn btn-primary' %>
		<% end %>
	</div>
</div><br>


<div class="row">
	<div class="col-lg-6 col-md-8 col-xs-5">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Artista</th>
					<th scope="col">Nombre</th>
					<th colspan="1"></th>
				</tr>
			</thead>
			<tbody>
				<% @canciones.each do |cancion| %>
				<tr>
					<td> <%= cancion.artist %></td>
					<td> <%= cancion.name %> </td>
					<td><%= link_to "Eliminar", playlist_song_path(@playlist, cancion), method: :delete, class:'btn btn-danger' %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>



<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>
