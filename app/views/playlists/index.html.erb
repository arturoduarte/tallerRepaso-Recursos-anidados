<h1 class="text-center">Playlists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Usuario</th>
      <th>NÂ° Canciones</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.user.name %></td>
        <td><%= playlist.songs.count %></td>

        <td><%= link_to 'Mostrar', playlist, class:'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_playlist_path(playlist), class:'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', playlist, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

